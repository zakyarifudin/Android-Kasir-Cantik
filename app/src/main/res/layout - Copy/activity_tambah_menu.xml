<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zaky.kasircantik.TambahMenu">


    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nama"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Kategori"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Harga"
        android:textSize="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/editNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textKategori"
        android:layout_below="@+id/textNama"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editNama"
        android:layout_below="@+id/textKategori"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textHarga"
        android:layout_below="@+id/textHarga"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editHarga"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/textHarga"
        android:text="TAMBAH" />
</RelativeLayout>
